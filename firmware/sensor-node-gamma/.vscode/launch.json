  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug",
      "type": "gdb",
      "request": "launch",
      "gdbpath": "arm-none-eabi-gdb",
      "target": "./build/sensor-node-gamma.elf",
      "cwd": "${workspaceRoot}",
      "autorun": [
        "target remote | ssh hc1 \"sudo openocd -f /tmp/oo.cfg\"",
        "monitor reset halt",
        "load"
      ],
      "preLaunchTask": "copy openocd config",
      "postDebugTask": "remove openocd config"
    },
  ]
}